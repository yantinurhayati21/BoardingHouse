@model DataBooking

@{
    Layout = "_LayoutAdmin";
}
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-header bg-pink text-white text-center">
                <h3>Edit Booking Lily Kost🌺</h3>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" method="post" asp-action="Edit" asp-controller="BookingKost">
                    <input type="text" value="@Model.Id" name="Id" hidden>
                    <div class="mb-3">
                        <label for="name" class="form-label">Nama</label>
                        <input type="text" id="name" name="Name" class="form-control" value="@Model.Name" />
                    </div>
                    <div class="mb-3">
                        <label for="phoneNumber" class="form-label">Nomor Telepon</label>
                        <input type="text" id="phoneNumber" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
                    </div>
                    <div class="mb-3">
                        <label for="idCardNumber" class="form-label">Nomor Induk Kependudukan</label>
                        <input type="text" id="idCardNumber" name="IDCardNumber" class="form-control" value="@Model.IDCardNumber" />
                    </div>
                    <div class="mb-3">
                        <label for="work" class="form-label">Pekerjaan</label>
                        <input type="text" id="work" name="Work" class="form-control" value="@Model.Work" />
                    </div>
                    <div class="mb-3">
                        <label for="count" class="form-label">Jumlah Kamar</label>
                        <input type="text" id="count" name="Count" class="form-control" value="@Model.Count" />
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success">Save</button>
                        <a href="/BookingKost/Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-pink {
        background: linear-gradient(90deg, rgba(255,105,180,1) 0%, rgba(255,182,193,1) 100%);
    }

    .text-white {
        color: #fff;
    }

    .card {
        border-radius: 15px;
    }

    .card-header {
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .card-body {
        border-bottom-left-radius: 15px;
        border-bottom-right-radius: 15px;
    }

    .form-label {
        font-weight: bold;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
</style>
