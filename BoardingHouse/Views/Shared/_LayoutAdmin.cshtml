<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BoardingHouseApp</title>
    <link rel="icon" type="image/x-icon" href="../Photo/Logo Lily Kost.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BoardingHouse.styles.css" asp-append-version="true" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        a {
            color: #007bff;
        }

            a.navbar-brand,
            .navbar-nav .nav-link {
                color: #fff !important;
            }

                a.navbar-brand:hover,
                .navbar-nav .nav-link:hover {
                    color: #ffd700 !important;
                }

        .btn-primary {
            color: #fff;
            background-color: #28a745;
            border-color: #28a745;
        }

            .btn-primary:hover {
                color: #fff;
                background-color: #ff69b4;
                border-color: #ff69b4;
            }

        header {
            background: linear-gradient(90deg, rgba(255,105,180,1) 0%, rgba(255,182,193,1) 100%);
            color: #fff;
            padding: 20px 0;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-toggler-icon {
            color: #fff;
        }

        .content-padding {
            padding-top: 20px;
        }

        footer {
            background: linear-gradient(90deg, rgba(255,105,180,1) 0%, rgba(255,182,193,1) 100%);
            color: #fff;
            padding: 20px 0;
            text-align: center;
        }

        .footer-links a {
            color: #fff;
            text-decoration: none;
            margin: 0 10px;
        }

            .footer-links a:hover {
                text-decoration: underline;
            }

        .border-top {
            border-top: 1px solid #e5e5e5;
        }

        .border-bottom {
            border-bottom: 1px solid #e5e5e5;
        }

        .box-shadow {
            box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .05);
        }

        .card-header h3 {
            color: #ff69b4;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            border: 1px solid #28a745;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #e5e5e5;
        }

        th {
            background-color: #daf5e9;
            color: #28a745;
        }

        tr:nth-child(even) {
            background-color: #daf5e9;
        }

        tr:hover {
            background-color: #b3ffb3;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Admin">BoardingHouseApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="DataKost" asp-action="Index">Data Kost</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="BookingKost" asp-action="Index">Data Booking</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container content-padding">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
        <div class="container">
            <p class="mb-1">© 2024 Beautiful Sakura Residence</p>
            <p class="mt-5">Create by Yanti Nurhayati</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
